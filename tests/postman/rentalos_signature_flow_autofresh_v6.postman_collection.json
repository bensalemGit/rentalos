{
  "info": {
    "_postman_id": "c941a897-e749-4489-9572-5c5a3246cfd7",
    "name": "RentalOS Public Signature Flow (auto fresh token) - v6 (CF Access Service Token)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin - Login (get JWT)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "CF-Access-Client-Id",
            "value": "{{cfAccessClientId}}"
          },
          {
            "key": "CF-Access-Client-Secret",
            "value": "{{cfAccessClientSecret}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"{{adminEmail}}\", \"password\": \"{{adminPassword}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200 or 201', function () {",
              "  pm.expect([200, 201]).to.include(pm.response.code);",
              "});",
              "",
              "// Guard: Cloudflare Access HTML means missing/invalid service token",
              "pm.test('Response is JSON (not Cloudflare HTML)', function () {",
              "  const ct = (pm.response.headers.get('Content-Type') || '').toLowerCase();",
              "  pm.expect(ct).to.not.include('text/html');",
              "});",
              "",
              "let data;",
              "try { data = pm.response.json(); } catch (e) { data = null; }",
              "pm.test('JWT present in response', function () {",
              "  pm.expect(data).to.be.an('object');",
              "});",
              "",
              "// Adapt to your actual field name (accessToken/token/jwt)",
              "const jwt = (data && (data.accessToken || data.token || data.jwt || data.access_token)) || null;",
              "pm.environment.set('jwt', jwt || '');",
              "pm.test('jwt saved to env', function () {",
              "  pm.expect(pm.environment.get('jwt')).to.not.equal('');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Admin - Create tenant public sign link (get public token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{jwt}}"
          },
          {
            "key": "CF-Access-Client-Id",
            "value": "{{cfAccessClientId}}"
          },
          {
            "key": "CF-Access-Client-Secret",
            "value": "{{cfAccessClientSecret}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/public-links/tenant-sign/send",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "public-links",
            "tenant-sign",
            "send"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"leaseId\": \"{{leaseId}}\", \"ttlHours\": \"{{ttlHours}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200 or 201', function () {",
              "  pm.expect([200, 201]).to.include(pm.response.code);",
              "});",
              "pm.test('Response is JSON (not Cloudflare HTML)', function () {",
              "  const ct = (pm.response.headers.get('Content-Type') || '').toLowerCase();",
              "  pm.expect(ct).to.not.include('text/html');",
              "});",
              "let data;",
              "try { data = pm.response.json(); } catch (e) { data = null; }",
              "const publicToken = (data && data.token) || null;",
              "pm.environment.set('publicToken', publicToken || '');",
              "pm.test('publicToken saved to env', function () {",
              "  pm.expect(pm.environment.get('publicToken')).to.not.equal('');",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Public - Info (token check)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/public/info?token={{publicToken}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "public",
            "info"
          ],
          "query": [
            {
              "key": "token",
              "value": "{{publicToken}}"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200', function () {",
              "  pm.expect(pm.response.code).to.eql(200);",
              "});",
              "let data;",
              "try { data = pm.response.json(); } catch (e) { data = null; }",
              "pm.test('ok=true', function () {",
              "  pm.expect(data).to.have.property('ok', true);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Public - Sign (tenant)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/public/sign?token={{publicToken}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "public",
            "sign"
          ],
          "query": [
            {
              "key": "token",
              "value": "{{publicToken}}"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"consent\": true, \"signerName\": \"{{signerName}}\", \"signerRole\": \"LOCATAIRE\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200 or 410 (already used)', function () {",
              "  pm.expect([200, 410]).to.include(pm.response.code);",
              "});",
              "let data;",
              "try { data = pm.response.json(); } catch (e) { data = null; }",
              "if (pm.response.code === 200) {",
              "  pm.test('ok=true', function () { pm.expect(data).to.have.property('ok', true); });",
              "} else {",
              "  pm.test('Link already used (410)', function () {",
              "    pm.expect(data).to.have.property('statusCode', 410);",
              "  });",
              "}"
            ]
          }
        }
      ]
    }
  ]
}