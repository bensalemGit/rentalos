{
  "info": {
    "name": "RentalOS Public Signature Flow (auto fresh token) - v3",
    "_postman_id": "3a12596b-50fa-455d-a5dc-c8cc93747b5d",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Admin - Login (get JWT)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "CF-Access-Client-Id",
            "value": "{{CF_ACCESS_CLIENT_ID}}"
          },
          {
            "key": "CF-Access-Client-Secret",
            "value": "{{CF_ACCESS_CLIENT_SECRET}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/auth/login",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"email\": \"{{ADMIN_EMAIL}}\", \"password\": \"{{ADMIN_PASSWORD}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200 or 201', function () {",
              "  pm.expect([200,201]).to.include(pm.response.code);",
              "});",
              "pm.test('Response is JSON (not Cloudflare Access HTML)', function () {",
              "  const ct = pm.response.headers.get('Content-Type') || '';",
              "  pm.expect(ct.toLowerCase()).to.include('application/json');",
              "});",
              "const data = pm.response.json();",
              "pm.environment.set('ADMIN_JWT', data.access_token || data.token || data.jwt || '');",
              "pm.test('ADMIN_JWT set', function(){ pm.expect(pm.environment.get('ADMIN_JWT')).to.not.equal(''); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Admin - Create tenant public sign link (get public token)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{ADMIN_JWT}}"
          },
          {
            "key": "CF-Access-Client-Id",
            "value": "{{CF_ACCESS_CLIENT_ID}}"
          },
          {
            "key": "CF-Access-Client-Secret",
            "value": "{{CF_ACCESS_CLIENT_SECRET}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/public-links/tenant-sign/send",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "public-links",
            "tenant-sign",
            "send"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"leaseId\": \"{{LEASE_ID}}\", \"ttlHours\": \"{{TTL_HOURS}}\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200 or 201', function () {",
              "  pm.expect([200,201]).to.include(pm.response.code);",
              "});",
              "pm.test('Response is JSON (not Cloudflare Access HTML)', function () {",
              "  const ct = pm.response.headers.get('Content-Type') || '';",
              "  pm.expect(ct.toLowerCase()).to.include('application/json');",
              "});",
              "const data = pm.response.json();",
              "pm.environment.set('PUBLIC_TOKEN', data.token || '');",
              "pm.test('PUBLIC_TOKEN set', function(){ pm.expect(pm.environment.get('PUBLIC_TOKEN')).to.not.equal(''); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Public - Info (token check)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "CF-Access-Client-Id",
            "value": "{{CF_ACCESS_CLIENT_ID}}"
          },
          {
            "key": "CF-Access-Client-Secret",
            "value": "{{CF_ACCESS_CLIENT_SECRET}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/public/info?token={{PUBLIC_TOKEN}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "public",
            "info"
          ],
          "query": [
            {
              "key": "token",
              "value": "{{PUBLIC_TOKEN}}"
            }
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200', function () { pm.expect(pm.response.code).to.equal(200); });",
              "const data = pm.response.json();",
              "pm.test('ok=true', function(){ pm.expect(data).to.have.property('ok', true); });"
            ]
          }
        }
      ]
    },
    {
      "name": "Public - Sign (tenant)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "CF-Access-Client-Id",
            "value": "{{CF_ACCESS_CLIENT_ID}}"
          },
          {
            "key": "CF-Access-Client-Secret",
            "value": "{{CF_ACCESS_CLIENT_SECRET}}"
          }
        ],
        "url": {
          "raw": "{{BASE_URL}}/api/public/sign?token={{PUBLIC_TOKEN}}",
          "host": [
            "{{BASE_URL}}"
          ],
          "path": [
            "api",
            "public",
            "sign"
          ],
          "query": [
            {
              "key": "token",
              "value": "{{PUBLIC_TOKEN}}"
            }
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\"consent\": true, \"signerName\": \"{{SIGNER_NAME}}\", \"signerRole\": \"LOCATAIRE\"}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Status is 200 (signed) or 410 (already used)', function () {",
              "  pm.expect([200,410]).to.include(pm.response.code);",
              "});",
              "const data = pm.response.json();",
              "if (pm.response.code === 200) {",
              "  pm.test('ok=true', function(){ pm.expect(data).to.have.property('ok', true); });",
              "} else {",
              "  pm.test('Link already used (410)', function(){ pm.expect(data).to.have.property('statusCode', 410); });",
              "}"
            ]
          }
        }
      ]
    }
  ]
}